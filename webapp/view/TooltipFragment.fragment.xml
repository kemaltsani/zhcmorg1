<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView id="quickView">
		<QuickViewPage id="_IDGenQuickViewPage1"
				header="Employee"
				icon="{/icon}"
				title="{/title}"
				description="{/description}">
			<QuickViewGroup id="_IDGenQuickViewGroup1" heading="Contact detail">
				<QuickViewGroupElement id="_IDGenQuickViewGroupElement1"
						label="Location"
						value="{/location}"/>
				<QuickViewGroupElement id="_IDGenQuickViewGroupElement2"
						label="Mobile"
						value="{/phone}"
						type="mobile"/>
				<QuickViewGroupElement id="_IDGenQuickViewGroupElement3"
						label="Email"
						value="{/email}"
						emailSubject="Subject"
						type="email"/>
			</QuickViewGroup>
			<QuickViewGroup id="_IDGenQuickViewGroup2" visible="{/showTeam}" heading="Team">
				<QuickViewGroupElement id="_IDGenQuickViewGroupElement4"
						label="Size"
						value="{/teamSize}" />
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>
